/* packageOrder/pages/orderDetail/serviceOrderDetail/serviceOrderDetail.wxss */
.container{
  border-top: 1px solid #eee;
  height: calc(100% - 2rpx);
}

.head{
  padding: 30rpx 40rpx;
  height: 160rpx;
  border-bottom: 1px solid #eee;
}

.head-img{
  float: left;
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}

.head-info{
  margin-left: 40rpx;
  height: 160rpx;
  float: left;
}

.store-name, .tip{
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.tip{
  color: #999;
}

.discount-name{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.desc-box{
  margin-top: 20rpx;
  font-size: 28rpx;
}

.desc-box .line{
  margin-top: 20rpx;
}

.desc-title{
  display: inline-block;
  width: 140rpx;
  color: #999;
  vertical-align: top;
}

.desc-content{
  display: inline-block;
  width: calc(100% - 220rpx);
  margin-left: 10rpx;
}

.li{
  height: 48rpx;
  line-height: 48rpx;
}

.price{
  float: right;
}

.content{
  padding: 20rpx 40rpx 20rpx 0;
  margin-left: 40rpx;
  width: calc(100% - 80rpx);

}

.content:not(:last-child){
  border-bottom: 1px solid #eee;
}

.content>view{
  min-height: 60rpx;
  line-height: 60rpx;
}

.title-text{
  font-weight: bold;
}

.name, .value{
  display: inline-block;
}

.name{
  width: 160rpx;
  color: #999;
  vertical-align: top;
}

.value{
  width: calc(100% - 160rpx);
}


.bottom{
  width: 100%;
  height: 80rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1px solid #999;
  background-color: #fff;
}

.btn{
  width: 160rpx;
  height: 60rpx;
  float: right;
  margin-top: 10rpx;
  margin-right: 40rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  border-radius: 10rpx;
  background-color: #000;
}

.line{
  height: 20rpx;
  background-color: #f8f8f8;
}