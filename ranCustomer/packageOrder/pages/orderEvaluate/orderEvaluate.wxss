.camera-text{
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  border: 5rpx solid #D9AB42;
  position: absolute;
  top: 42rpx;
  left: 41rpx;
  z-index: 2;
  box-sizing: border-box;
}

.thumb-box{
  height: 60rpx;
}

.thumb-box image{
  width: 60rpx;
  height: 60rpx;
  float: right;
  margin-right: 10rpx;
}

.thumb-box text{
  float: right;
  color: #999;
  margin-right: 40rpx;
  height: 60rpx;
  line-height: 60rpx;
}



.btn{
  position: fixed;
  bottom: 20rpx;
  left: 30rpx;
  width: calc(100% - 60rpx);
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #333;
  color: #fff;
}