/* packageStore/pages/payOrder/payOrder.wxss */

.content{
  overflow: hidden;
}

.shadow-box{
  height: 2px;
  box-shadow: 0px 2px 4px #eee;
}

.price-box{
  height: 250rpx;
  width: 100%;
  background: #fff;
  box-shadow: 0px 2px 4px #eee;
  box-sizing: border-box;
  padding-top: 49rpx;
}

.text{
  text-align: center;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.price{
  text-align: center;
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}

.big{
  font-size: 56rpx;
}

.time{
  margin-top: 20rpx;
  font-size: 22rpx;
  color: #D9AB42;
  text-align: center;
}

.pay-box{
  margin: 20rpx;
  background: #fff;
  padding: 0 55rpx 10rpx;
}

.title{
  text-align: center;
  font-size: 30rpx;
  color: #333;
  padding: 30rpx 0;
  font-weight: bold;
}


.radio{
  display: block;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1px solid #eee;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333;
}

.radio radio{
  float: right;
}

.radio image{
  float: left;
  width: 66rpx;
  height: 60rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
}

.balanceTip{
  margin-left: 20rpx;
  font-size: 24rpx;
  color: red;
}

.tip{
  margin-top: 20rpx;
  padding-left: 30rpx;
  font-size: 24rpx;
  color: #999;
}

.tip text{
  float: left;
  margin-right: 13rpx;
  height: 24rpx;
  line-height: 24rpx;
}

.tip-icon{
  width: 24rpx;
  border-radius: 50%;
  text-align: center;
  border: 1px solid #999;
  font-size: 20rpx;
}

.pay-btn{
  position: absolute;
  bottom: 20rpx;
  left: 28rpx;
  width: calc(100% - 56rpx);
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  border: 1px solid;
  border-radius: 12rpx;
  background: #000;
}

radio{
    width: 38rpx;
}
 
radio .wx-radio-input{
    border-radius: 50%; 
    width: 27rpx;
    height: 27rpx;
}

/* 选中后的样式 */
radio .wx-radio-input.wx-radio-input-checked::before{
    border-radius: 50%;
    width: 44rpx; 
    height: 44rpx; 
    line-height: 44rpx;
    text-align: center;
    font-size: 26rpx; /* 对勾大小 26rpx */
    color:#fff; /* 对勾颜色 */
    background: #D9AB42;
    border-color: #D9AB42;
    top: 13rpx;
    right: 13rpx;
}


.info-box{
  position: absolute;
  top: 30%;
  left: 100rpx;
  width: calc(100% - 200rpx);
  z-index: 11;
}

.info-content{
  width: 100%;
  padding: 30rpx 45rpx 40rpx;
  background: #fff;
  box-sizing: border-box;
}

.info-content .title{
  text-align: center;
  font-size: 32rpx;
  color: #333;
}

.info-content .info-text{
  font-size: 32rpx;
  color: #333;
  margin-top: 50rpx;
}

.info-box .btn{
  margin: 40rpx 95rpx 0;
  height: 80rpx;
  background: #000;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
}