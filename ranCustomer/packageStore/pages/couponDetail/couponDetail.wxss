/* packageStore/pages/couponDetail/couponDetail.wxss */

.coupon-head{
  padding: 30rpx 40rpx;
  border-bottom: 1px solid #eee;
}

.coupon{
  height: 150rpx;
  border: 1px solid #000;
  border-radius: 10rpx;
  padding: 20rpx;
}

.store-name{
  font-size: 26rpx;
}

.coupon-title{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
}

.coupon-condition{
  text-align: right;
  font-size: 26rpx;
  color: #999;
}



.box{
  margin-left: 40rpx;
  padding: 30rpx 30rpx 40rpx 0;
  border-bottom: 1px solid #eee;
}

.title{
  font-size: 30rpx;
  font-weight: bold;
  height: 40rpx;
  line-height: 40rpx;
}

.desc-box{
  margin-top: 20rpx;
  font-size: 28rpx;
}

.desc-box>view{
  margin-top: 20rpx;
}

.desc-title{
  display: inline-block;
  width: 140rpx;
  color: #999;
  vertical-align: top;
}

.desc-content{
  display: inline-block;
  width: calc(100% - 220rpx);
  margin-left: 10rpx;
}

.bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1px solid #999;
  width: 100%;
  height: 80rpx;
}

.price-box{
  position: relative;
  width: 100%;
  height: 100%;
  line-height: 80rpx;
}

.discount-price{
  color: red;
  font-size: 26rpx;
  margin-left: 40rpx;
}

.big{
  font-size: 32rpx;
  font-weight: bold;
}

.original-price{
  font-size: 26rpx;
  margin-left: 10rpx;
  text-decoration: line-through;
  color: #999;
}

.buy-btn{
  font-size: 30rpx;
  color: #fff;
  background-color: #000;
  width: 160rpx;
  height: 60rpx;
  border-radius: 10rpx;
  line-height: 60rpx;
  text-align: center;
  position: absolute;
  top: 10rpx;
  right: 50rpx;
}
