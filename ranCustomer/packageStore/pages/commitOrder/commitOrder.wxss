/* packageStore/pages/commitOrderCoupon/commitOrderCoupon.wxss */
.container{
  background-color: #f8f8f8;
  font-size: 28rpx;
  padding-top: 40rpx;
  height: calc(100% - 40rpx);
}

.box{
  border-radius: 10rpx;
  background-color: #fff;
  margin: 0 20rpx 0 20rpx;
  width: calc(100% - 40rpx);
}

.box:not(:last-child){
  margin-bottom: 40rpx;
}

.line{
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 40rpx;
}

.right-text{
  float: right;
}

.add-btn, .minus-btn{
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  font-size: 50rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #999;
  margin-top: 5rpx;
}

.num{
  display: inline-block;
  margin: 0 20rpx;
}

.borderTop{
  border-top: 1px solid #eee;
}

.red{
  color: red;
}

.grey{
  color: #999;
}

.checkbox{
  font-size: 28rpx;
  color: #999;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  background-color: #999;
  color: #fff; 
  border-radius: 5rpx;
}

checkbox .wx-checkbox-input{
  height: 28rpx;
  width: 30rpx;
  margin-top: 0rpx;
}

.bottom{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
}

.commit-btn{
  font-size: 30rpx;
  color: #fff;
  background-color: #000;
  width: 160rpx;
  height: 60rpx;
  border-radius: 10rpx;
  line-height: 60rpx;
  text-align: center;
  float: right;
  margin-right: 50rpx;
  margin-top: 10rpx;
}

.price-box{
  float: right;
  margin-right: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.discount-price{
  color: red;
  font-size: 26rpx;
}

.big{
  font-size: 32rpx;
  font-weight: bold;
}