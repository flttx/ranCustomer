/* packageStore/pages/orderFlower/orderFlower.wxss */
.banners{
  width: 100%;
  height: 480rpx;
  padding: 20rpx 0;
}

.banner-img{
  width: 500rpx !important;
  height: 480rpx;
  /* display: inline-block; */
  position: absolute;
  top: 0;
  left: calc((100% - 500rpx)/2);
}



.banner-img image{
  width: 400rpx;
  height: 100%;
  margin: 0 50rpx;
}

.desc-box{
  width: 100%;
  margin: 80rpx 0;
  font-size: 26rpx;
}

.desc-box>view{
  text-align: center;
}

.flower-name{
  font-size: 32rpx;
}

.flower-price{
  height: 60rpx;
  line-height:  60rpx;
  color: red;
}

.flower-desc{
  width: 60%;
  margin: 40rpx auto;
}

.bottom{
  position: absolute;
  bottom: 40rpx;
  padding: 0 40rpx;
  width: calc(100% - 80rpx);
}