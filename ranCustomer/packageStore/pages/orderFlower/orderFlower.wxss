/* packageStore/pages/orderFlower/orderFlower.wxss */
.banners{
  width: 100%;
  height: 480rpx;
  padding: 20rpx 0;
}

.banner-img{
  width: 500rpx !important;
  height: 480rpx;
  /* display: inline-block; */
  position: absolute;
  top: 0;
  left: calc((100% - 500rpx)/2);
}



.banner-img image{
  width: 400rpx;
  height: 100%;
  margin: 0 50rpx;
}

.desc-box{
  width: 100%;
  margin: 80rpx 0;
  font-size: 26rpx;
}

.desc-box>view{
  text-align: center;
}

.flower-name{
  font-size: 32rpx;
}

.flower-price{
  height: 60rpx;
  line-height:  60rpx;
  color: red;
}

.flower-desc{
  width: 60%;
  margin: 40rpx auto;
}

.bottom{
  position: absolute;
  bottom: 40rpx;
  padding: 0 40rpx;
  width: calc(100% - 80rpx);
}

.basket-box{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  max-height: 80%;
  overflow-y: auto; 
  padding-top: 30rpx;
  background: #F8F8F8;
  z-index: 11;
}

.flower-box{
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
  margin-bottom: 130rpx;
}

.flower-item{
  background: #fff;
  padding: 20rpx;
  position: relative;
  margin-bottom: 30rpx;
  border-radius: 12rpx;
}

.flower-item .flower-img{
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
  border-radius: 12rpx;
  border: 1px solid;
  vertical-align: top;
}

.flower-item .flower-info{
  display: inline-block;
  width: calc(100% - 180rpx);
  margin-left: 20rpx;
  height: 150rpx;
  position: relative;
}

.flower-info .name{
  width: calc(100% - 50rpx);
  font-size: 32rpx;
  color: #333;
}

.flower-info .desc{
  font-size: 28rpx;
  color: #999;
  margin-top: 12rpx;
}

.flower-info .price{
  font-size: 28rpx;
  color: red;
  position: absolute;
  bottom: 0;
  left: 0;
}

.flower-info .price text{
  font-size: 32rpx;
}

.delete-icon{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 36rpx;
  height: 36rpx;
}

.flower-num{
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 180rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 30rpx;
}

.add-icon, .minus-icon{
  width: 40rpx;
  height: 40rpx;
}

.add-icon{
  float: right;
}

.minus-icon{
  float: left;
}



.bottom-box{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
}

.order-btn{
  float: right;
  width: 150rpx;
  height: 60rpx;
  background: #000;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  border-radius: 16rpx;
}

.sumPrice{
  float: right;
  margin-right: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}

.sumPrice text{
  color: red;
  font-size: 32rpx;
}

.sumCount{
  float: right;
  margin-right: 80rpx;
  color: #999;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}