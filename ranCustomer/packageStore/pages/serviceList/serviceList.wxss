/* packageStore/pages/serviceList/serviceList.wxss */
.container{
  font-size: 30rpx;
}

.tabs{
  width: 100%;
  height: 60rpx;
  display: flex;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  position: fixed;
  top: 0;
  z-index: 10;
}

.tabs-item{
  flex: 1;
  text-align: center;
  position: relative;
}

.bar{
  width: 80rpx;
  height: 6rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
  background-color: #666;
}

.tab-box{
  padding-top:60rpx;
  padding-bottom:100rpx;
  height:100%;
  box-sizing:border-box;
}

.box{
  margin-left: 40rpx;
  padding: 40rpx 0;
  border-bottom: 1px solid #eee;
}

.service-img{
  display: inline-block;
  width: 280rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.service-info{
  display: inline-block;
  width: calc(100% - 300rpx);
  margin-left: 20rpx;
  vertical-align: top;
}

.service-price{
  margin-top: 20rpx;
  font-size: 28rpx;
}

.vip-price{
  display: inline-block;
  padding: 5rpx 8rpx;
  background-color: #000;
  color: #fff;
  font-size: 26rpx;
  border-radius: 10rpx;
}

