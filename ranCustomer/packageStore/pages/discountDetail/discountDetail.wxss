/* packageStore/pages/discountDetail/discountDetail.wxss */
.head{
  padding: 30rpx 40rpx;
  height: 160rpx;
  border-bottom: 1px solid #eee;
}

.head-img{
  float: left;
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}

.head-info{
  margin-left: 40rpx;
  height: 160rpx;
  float: left;
}

.store-name, .tip{
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.tip{
  color: #999;
}

.discount-name{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.box{
  margin-left: 40rpx;
  padding: 30rpx 30rpx 40rpx 0;
  border-bottom: 1px solid #eee;
}

.title{
  font-size: 30rpx;
  font-weight: bold;
  height: 40rpx;
  line-height: 40rpx;
}

.desc-box{
  margin-top: 20rpx;
  font-size: 28rpx;
}

.desc-box .line{
  margin-top: 20rpx;
}

.desc-title{
  display: inline-block;
  width: 140rpx;
  color: #999;
  vertical-align: top;
}

.desc-content{
  display: inline-block;
  width: calc(100% - 220rpx);
  margin-left: 10rpx;
}

.li{
  height: 48rpx;
  line-height: 48rpx;
}

.price{
  float: right;
}


.bottom-box{
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 40rpx;
  border-top: 2rpx solid #999;
  background: #fff;
}

.bottom-price{
  color: red;
  font-size: 26rpx;
}

.bottom-price .big{
  font-size: 40rpx;
}

.bottom-price .original-price{
  color: #999;
  text-decoration: line-through;
}

.bottom-btn{
  float: right;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #000;
  color: #fff;
  border-radius: 12rpx;
  margin-top: 20rpx;
}


