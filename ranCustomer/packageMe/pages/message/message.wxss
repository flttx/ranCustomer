/* packageMe/pages/message/message.wxss */


.tabs{
  display: flex;
}

.tab-item{
  flex: 1;
  text-align: center;
  padding: 33rpx 0;
  font-size: 32rpx;
  position: relative;
}

.tab-item .new-icon{
  position: absolute;
  right: calc(50% - 80rpx);
  top: 33rpx;
}

.bar{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
  width: 60rpx;
  height: 9rpx;
  background: #000;
}

swiper{
  height: calc(100% - 110rpx);
}

.item{
  padding: 40rpx 32rpx 20rpx 30rpx;
  background: #fff;
  margin-bottom: 25rpx;
}

.img-box{
  display: inline-block;
  width: 70rpx;
  height: 70rpx;
  border: 1px solid;
}

.item-info{
  display: inline-block;
  margin-left: 30rpx;
  width: calc(100% - 110rpx);
}

.title{
  font-size: 28rpx;
  color: #333;
  width: 100%;
}

.title .new-icon{
    float: right;
}

.new-icon{
  width: 12rpx;
  height: 12rpx;
  background: #FF8A00;
  border-radius: 50%;
}

.item-content{
  color: #999;
  font-size: 24rpx;
  margin-top: 18rpx;
}

.time{
  margin-top: 13rpx;
  font-size: 24rpx;
  color: #999;
  text-align: right;
}


.comment-item{
  padding: 24rpx 30rpx;
  background: #fff;
  margin-bottom: 30rpx;
}

.comment-info, .comment-img{
  display: inline-block;
}

.comment-info{
  width: calc(100% - 130rpx);
  vertical-align: top;
}

.user-img{
  display: inline-block;
  width: 58rpx;
  height: 58rpx;
  border-radius: 50%;
  background: #F5A149;
  vertical-align: top;
}

.comment-title{
  display: inline-block;
  height: 96rpx;
  line-height: 96rpx;
  margin-left: 20rpx; 
  font-size: 28rpx;
  color: #333;
}

.comment-content{
  display: inline-block;
  margin-left: 98rpx;
  font-size: 24rpx;
  line-height: 28rpx;
  color: #999;
}

.comment-img{
  width: 96rpx;
  height: 96rpx;
  background: #F6B37F;
}