/* packageMe/pages/integral/integral.wxss */
.head{
  width: 100%;
  padding-bottom: 20rpx;
  padding-top: 40rpx;
}



.circle{
  width: 280rpx;
  height: 280rpx;
  border: 2px solid #666;
  border-radius: 50%;
  margin-top: 40rpx;
  margin-left: calc((100% - 280rpx)/2);
}

.circle view{
  text-align: center;
}

.integral-text{
  margin-top: 80rpx;
}

.integral-value{
  font-size: 52rpx;
}

.menu-box{
  margin-top: -60rpx;
  height: 200rpx;
  background-color: #fff;
}

.menu-item{
  display: inline-block;
  width: calc((100% - 240rpx)/2);
  height: 140rpx;
  border-radius: 10rpx;
  background-color: #999;
  margin-left: 80rpx;
  margin-top: 40rpx;
  position: relative;
}

.menu-item>view{
  height: 40rpx;
  margin-top: 50rpx;
  color: #fff;
  font-size: 30rpx;
}

.menu-item>view>image{
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin-left: 10rpx;
  margin-top: 5rpx;
}

.menu-item>view>text{
  float: left;
  margin-left: 20rpx;
}

.menu-icon{
  position: absolute;
  bottom: 4rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
}

.line{
  height: 20rpx;
  background-color: #f8f8f8;
}