/* packageMe/pages/integral/integral.wxss */
.content{
  overflow: hidden;
}

.head{
  width: 100%;
  height: 340rpx;
  background: #000;
}

.date-box{
  position: absolute;
  top: 42rpx;
  left: 28rpx;
  width: calc(100% - 56rpx);
  height: 340rpx;
}

.calendar{
  display: inline-block;
  width: calc((100% - 48rpx)/7);
  height: 112rpx;
}

.calendar view{
  width: 100%;
  text-align: center;
  color: #000;
}

.calendar.current{
  background: #fff;
  border-bottom: 10rpx solid #fff;
}

.calendar:not(:first-child){
  margin-left: 8rpx;
}

.month{
  font-size: 26rpx;
  margin-top: 24rpx;
}

.day{
  font-size: 34rpx;
}

.current .month{
  font-weight: bold;
}

.calendar.other{
  background: #ECC66E;
  border-bottom: 10rpx solid #000;
}

.sign-box{
  width: 100%;
  background: #fff;
  height: 218rpx;
  line-height: 176rpx;
  padding: 0 50rpx;
  box-sizing: border-box;
  position: relative;
}

.points{
  color: #D9AB42;
  font-size: 66rpx;
  font-family: DINAlternate-Bold;
}

.point-info{
  position: absolute;
  bottom: 42rpx;
  left: 50rpx;
  font-size: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
}

.point-info image{
  width: 24rpx;
  height: 24rpx;
  margin-left: 5rpx;
  margin-right: 10rpx;
  margin-top: 1rpx;
}

.sign-btn{
  float: right;
  width: 182rpx;
  height: 72rpx;
  margin-top: 52rpx;
  box-sizing: border-box;
  border: 4rpx solid #000;
  color: #333;
  font-size: 30rpx;
  text-align: center;
  line-height: 70rpx;
}

.body{
  margin-top: 80rpx;
  padding-top: 27rpx;
  height: calc(100% - 420rpx);
  background: #fff;
}

.body-title{
  font-size: 36rpx;
  color: #333;
  text-align: center;

}

.exchange-item{
  display: inline-block;
  margin: 40rpx calc((100% - 404rpx)/4.2);
  width: 202rpx;

}

.exchange-img{
  width: 202rpx;
  height: 202rpx;
  background: #BFBFBF;
}

.exchange-name{
  margin-top: 17rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.exchange-points{
  font-size: 24rpx;
  color: #CFA972;
  margin-top: 13rpx;
  text-align: center;
}

.exchange-btn{
  margin-top: 19rpx;
  height: 44rpx;
  display: flex;
  justify-content: center;
}

.exchange-btn text{
  width: 120rpx;
  border: 1px solid #D9AB42;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  color: #D9AB42;
  font-size: 24rpx;
  box-sizing: border-box;
}








.info-box{
  position: absolute;
  top: 30%;
  left: 100rpx;
  width: calc(100% - 200rpx);
  z-index: 11;
}

.info-content{
  width: 100%;
  padding: 30rpx 45rpx 40rpx;
  background: #fff;
  box-sizing: border-box;
}

.info-content .title{
  text-align: center;
  font-size: 32rpx;
  color: #333;
}

.info-content .info-text{
  font-size: 32rpx;
  color: #333;
  margin-top: 50rpx;
}

.info-box .btn{
  margin: 40rpx 95rpx 0;
  height: 80rpx;
  background: #000;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
}