/* packageMe/pages/couponDetail/couponDetail.wxss */
.content{
  padding: 28rpx;
}

.box{
  width: 100%;
  height: 200rpx;
  padding: 12rpx 24rpx 12rpx 0;
  background: #fff;
  box-sizing: border-box;
}

.coupon-info{
  float: left;
  width:  226rpx;
  height: 100%;
  position: relative;
  border-right: 4rpx dashed #D9AB42;
  box-sizing: border-box;
  padding-bottom: 8rpx;
}

.coupon-title{
  position: absolute;
  bottom: 8rpx;
  left: 0;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #D9AB42;
  font-family: PingFangSC-Regular;
  font-weight: 600;
}

.coupon-price{
  height: 140rpx;
  display: flex;
  justify-content: center;
  line-height: 140rpx;
  color: #D9AB42;
}

.price-amount{
  font-size: 110rpx;
  font-family: DINAlternate-Bold;
  position: relative;
}

.price-unit{
  font-size: 40rpx;
  position: absolute;
  right: -30rpx;
  top: -50rpx;
}

.coupon-desc{
  float: left;
  width: calc(100% - 226rpx);
  height: 100%;
  padding-left: 30rpx;
  position: relative;
  box-sizing: border-box;
}

.coupon-desc image{
  position: absolute;
  right: 0;
  top: 20rpx;
  width: 36rpx;
  height: 36rpx;
}

.coupon-desc view{
  margin-top: 50rpx;

}

.coupon-desc view text{
  display: block;
  color: #666;
  font-size: 24rpx;
  
  margin-bottom: 28rpx;
}

.desc-box{
  margin: 0 20rpx;
  background: #fff;
  padding: 40rpx 0;
}

.desc-line{
  font-size: 24rpx;
  padding: 0 36rpx;
  
}

.desc-line:not(:last-child){
  margin-bottom: 40rpx;
}

.desc-line .label{
  display: inline-block;
  width: 120rpx;
  color: #666;
  vertical-align: top;
}

.desc-line .value{
  display: inline-block;
  width: calc(100% - 130rpx);
  color: #333;
  margin-left: 10rpx;
}

.btn{
  margin: 40rpx 122rpx 0 122rpx;
  height: 80rpx;
  background: #000;
  color: #fff;
  line-height: 80rpx;
  text-align: center;
}