/* packageMe/myInfo/myInfo.wxss */
.container{
  border-top: 1px solid #eee;
  height: calc(100% - 2rpx);
}

.row{
  box-sizing: border-box;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 28rpx;
  background: #fff;
}

.row:not(.phone){
  border-bottom: 1px solid #d5d5d5;
}

.row .name{
  float: left;
  font-size: 32rpx;
  color: #999;
}

.value{
  float: right;
  font-size: 28rpx;
  margin-right: 10rpx;
}

.user-img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  float: right;
  margin: 10rpx 10rpx 10rpx 0;
}

.address{
  box-sizing: border-box;
  height: 100rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  margin-top: 30rpx;
  background: #fff;
  /* display: flex;
  flex-direction: column; */
}

.address .name{
  float: left;
  font-size: 32rpx;
  line-height: 100rpx;
  color: #999;
}

.address text{
  float: right;
  font-size: 28rpx;
  line-height: 100rpx;
  margin-right: 10rpx;
}


button{
  float: right;
  width: 240rpx;
  height: 90rpx;
  text-align: right;
  margin-right: 10rpx;
  padding-right: 0;
  padding-left: 0;
  font-size: 32rpx;
  line-height: 100rpx;
  border: none;
  background-color: white;
}

.button-hover{
  background-color: #fff;
  color: #fff;
}

button::after {
  border: 0; 
}


.jiantou{
  width: 40rpx;
  height: 40rpx;
  float: right;
  margin-top: 30rpx;
}

.form{
  box-sizing: border-box;
  width: 80%;
  height: 400rpx;
  border: 1px solid #333;
  z-index: 11;
  position: absolute;
  top: calc(50% - 200rpx);
  left: 10%;
  background-color: #fff;
  padding: 60rpx;
}

.form .input{
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1px solid #999;
  width: 80%;
  margin: 20rpx 10%;
}

.input input{
  float: right;
  width: calc(100% - 60rpx);
  height: 60rpx;
  line-height: 60rpx;
}

.tip{
  font-size: 26rpx;
  position: absolute;
  bottom: 80rpx;
}

.bottom{
  position: absolute;
  bottom: 40rpx;
  left: 0;
  width: 100%;
  height: 80rpx;
}

.confirm-btn{
  width: 80%;
  height: 80rpx;
  margin: 0 10%;
  border: 1px solid #333;
  border-radius: 10rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
}