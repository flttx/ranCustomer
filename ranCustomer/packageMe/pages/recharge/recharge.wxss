/* packageMe/pages/recharge/recharge.wxss */



.select-box{
  display: flex;
  margin: 0 80rpx;
  justify-content: space-between;
  flex-wrap:wrap;
  align-content:space-between;
  box-sizing: border-box;
}

.item{
  width: 240rpx;
  height: 140rpx;
  border: 1px solid #333;
  margin-top: 40rpx;
}

.balance{
  text-align: right;
  padding: 40rpx;
}



.btn-box{
  margin: 40rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: calc(100% - 80rpx);
  height: 120rpx;
}

.recharge-btn{
  width: 100%;
  height: 80rpx;
  border: 1px solid #333;
  border-radius: 10rpx;
  line-height: 80rpx;
  text-align: center;
}

.tip{
  margin-top: 20rpx;
  text-align: center;
  font-size: 28rpx;
}