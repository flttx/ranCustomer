/* packageMe/pages/coupon/coupon.wxss */
.tabs{
  width: 100%;
  height: 60rpx;
  display: flex;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  position: fixed;
  top: 0;
  z-index: 10;
  font-size: 28rpx;
}

.tabs-item{
  flex: 1;
  text-align: center;
  position: relative;
}

.bar{
  width: 80rpx;
  height: 6rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
  background-color: #666;
}

.tab-box{
  padding-top:60rpx;
  padding-bottom:100rpx;
  height:100%;
  box-sizing:border-box;
}

.box{
  width: calc(100% - 160rpx);
  border-radius: 10rpx;
  background-color: #999;
  padding: 30rpx 40rpx;
  position: relative;
}

.box:not(:last-child){
  margin-bottom: 40rpx;
}

.coupon-title{
  width: calc(100% - 130rpx);
  height: 84rpx;
  font-size: 32rpx;
  text-overflow:ellipsis;
  overflow:hidden;
  display:-webkit-box;
  -webkit-line-clamp:2; /*这个数字是设置要显示省略号的行数*/
  -webkit-box-orient:vertical;
}

.coupon-price{
  width: 200rpx;
  position: absolute;
  right: 20rpx;
  top: 40rpx;
  text-align: right;
  font-size: 52rpx;
}

.coupon-info{
  margin-top: 40rpx;
  font-size: 26rpx;
}

.coupon-info view{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}