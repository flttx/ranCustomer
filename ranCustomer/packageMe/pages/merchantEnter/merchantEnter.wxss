/* packageMe/pages/merchantEnter/merchantEnter.wxss */

.head{
  width: 100%;
  height: 600rpx;
  background-color: #aaa;
  /* position: fixed;
  top: 0;
  z-index: 2; */
}

.flow-box{
  margin: 0 40rpx 40rpx 40rpx;
  height: 200rpx;
  display: flex;
  position: absolute;
  top: 180rpx;
  width: calc(100% - 80rpx);
}

.item{
  height: 200rpx;
  flex: 1;
}

.item image{
  width: 120rpx;
  height: 120rpx;
  border: 1px solid #333;
  border-radius: 50%;
  margin-left: calc((100% - 120rpx)/2);
}

.item>view{
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 30rpx;
}

.btn{
  width: 200rpx;
  height: 80rpx;
  border: 1px solid;
  line-height: 80rpx;
  text-align: center;
  font-size: 40rpx;
  background-color: #fff;
  margin: 0 auto;
  position: absolute;
  bottom: 60rpx;
  left: 0;
  right: 0;
  border-radius: 10rpx;
}

.question-box{
  height: calc(100% - 600rpx);
  /* margin-top: 600rpx; */
}

scroll-view{
  /* position:absolute;
  top:680rpx; */
  height: calc(100% -80rpx);
}

.title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  /* position: fixed;
  background-color: #fff;
  z-index: 2; */
}

.question-item{
  width: 100%;
  margin-bottom: 40rpx;
}

.question-title{
  width: calc(100% - 80rpx);
  height: 60rpx;
}

.question-title .num{
  float: left;
  width: 80rpx;
  font-size: 30rpx;
  text-align: right;
  height: 60rpx;
  line-height: 60rpx;
}

.title-text{
  float: left;
  width: calc(100% - 80rpx);
  height: 60rpx;
  line-height: 60rpx;
}

.answer{
  width: calc(100% - 160rpx);
  margin-left: 80rpx;
  color: #999;
  font-size: 26rpx;
}

.mask{
  background: rgba(0, 0, 0, 0.2);
  z-index: 2;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
}

.form{
  width: 80%;
  height: 560rpx;
  padding: 20rpx;
  position: absolute;
  top: calc((100% - 600rpx)/2);
  left: calc(10% - 20rpx);
  z-index: 3;
  background-color: #fff;
}

.form-title{
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}

.row{
  height: 60rpx;
  margin-top: 20rpx;
}

.label{
  float: left;
  height: 60rpx;
  line-height: 60rpx;
  width: 120rpx;
}

.row input{
  float: left;
  height: 40rpx;
  line-height: 40rpx;
  padding-left: 10rpx;
  margin-left: 20rpx;
  width: calc(100% - 160rpx);
  border: 0;
  border-bottom: 1px solid #999;
}

.remark-box{
  margin-top: 20rpx;
  height: 140rpx;
}

.remark-box textarea{
  width: calc(100% - 30rpx);
  height: 100rpx;
  border: 1px solid #333;
  padding: 10rpx;
}