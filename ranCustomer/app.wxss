/**app.wxss**/
page{
    width: 100%;
    height: 100%;
    color: #333;
    font-weight: 400;
    font-size: 30rpx;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.container{
  width: 100%;
  height: 100%;
}


/* 单行超出部分省略号 */
.single-line{
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}

/* 两行超出部分省略号 */
.double-line{
  text-overflow:ellipsis;
  overflow:hidden;
  display:-webkit-box;
  -webkit-line-clamp:2; /*这个数字是设置要显示省略号的行数*/
  -webkit-box-orient:vertical;
}

.content{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  background: #F8F8F8;
}