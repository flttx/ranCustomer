/* packageActivity/pages/activityList/activityList.wxss */
.container{
  width: 100%;
  height: 100%;
  font-size: 32rpx;
}
.tabs{
  width: 100%;
  height: 60rpx;
  display: flex;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  position: fixed;
  top: 0;
  z-index: 10;
}

.tabs-item{
  flex: 1;
  text-align: center;
  position: relative;
}

.bar{
  width: 80rpx;
  height: 6rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
  background-color: #666;
}

.tab-box{
  padding-top:60rpx;
  height:100%;
  box-sizing:border-box;
}

scroll-view{
  width: calc(100% - 80rpx);
  height:100vh;
  padding:0 40rpx;
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
}

.item{
  display: inline-block;
  width: calc((100% - 40rpx)/2);
  height: 440rpx;
  margin-bottom: 40rpx;
}

.item:nth-child(2n){
  margin-left: 40rpx;
}

.item image{
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx;
}

.item title{
  font-size: 30rpx;
  height: 40rpx;
}
