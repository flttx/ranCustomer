/* pages/comment/comment.wxss */
.tab{
  width: 100%;
  height: 60rpx;
  position: fixed;
  top: 0;
  left: 0;
}

.tab-box{
  width: 400rpx;
  height: 100rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
  display: flex;
  font-size: 28rpx;
}

.tab-item{
  flex: 1;
  text-align: center;
  position: relative;
  font-size: 30rpx;
  color: #666;
  height: 100rpx;
  line-height: 100rpx;
  font-weight: bold;
}

.active{
  font-size: 32rpx;
  color: #333;
}

.bar{
  width: 60rpx;
  height: 10rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
  background-color: #666;
}

.swiper-box{
  padding-top:100rpx;
  height:100%;
  box-sizing:border-box;
}

scroll-view{
  height:100%;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.left, .right{
  display: inline-block;
  width: 50%;
  vertical-align: top;
}

.column{
  box-sizing: border-box;
  margin: 0 12rpx 24rpx 12rpx;
  background: #fff;
  padding: 26rpx 26rpx 20rpx 26rpx;
}

.box{
  width: 100%;
  position: relative;
}

.box image{
  width: 100%;
  height: 360rpx;
}

.img-num{
  width: 80rpx;
  height: 40rpx;
  position: absolute;
  right: 40rpx;
  top: 40rpx;
  background-color: #333;
  border-radius: 10rpx;
  color: #fff; 
  font-size: 26rpx;
  line-height: 40rpx;
  text-align: center;
}

.comment-content{
  height: auto;
  font-size: 26rpx;
  color: #666;
  line-height: 35rpx;
  margin-bottom: 20rpx;
}

.comment-img{
  height: 40rpx;
}

.comment-img>image{
  float: right;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}

.comment-userInfo{
  float: right;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  margin-left: 10rpx;
}

.comment-userInfo>view{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
}

.comment-date{
  color: #999;
}

.operation{
  float: left;
}

.operation image{
  float: right;
  margin-right: 10rpx;
  width: 40rpx;
  height: 40rpx;
}

.operation text{
  float: right;
  height: 40rpx;
  line-height: 40rpx;
  color: #999;
  margin-right: 20rpx;
}

.comment-text{
  height: 80rpx;
}

.showAll{
  height: 40rpx;
  line-height: 40rpx;
  color: #999;
  font-size: 28rpx;
  text-align: right;
}

button{
  float: right;
  width: 60rpx;
  height: 40rpx;
  text-align: right;
  margin-right: 10rpx;
  padding-right: 0;
  padding-left: 0;
  font-size: 32rpx;
  line-height: 40rpx;
  border: none;
  background-color: white;
}

.button-hover{
  background-color: #fff;
  color: #fff;
}

button::after {
  border: 0; 
}