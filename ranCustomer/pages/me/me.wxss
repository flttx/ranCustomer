/* pages/me/me.wxss */
.container{
  background-color: #eee; 
}

.header{
  width: 100%;
  
  padding: 30rpx 28rpx;
  box-sizing: border-box;
}

.user-box{
  width: 100%;
  background: #000;
  height: 400rpx;
}

.my-info{
  height: 200rpx;
  width: 100%;
}

.bind-phone{
  font-size: 32rpx;
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  color: #fff;
  background: transparent;
}

.avatarUrl{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  background-color: #fff;
  margin: 30rpx 0 0 30rpx;
  float: left;
  overflow: hidden;
}
.avatarUrl image{
  width: 100%;
  height: 100%;
}

.info{
  float: left;
  margin-top: 30rpx;
  margin-left: 20rpx;
  color: #fff;
  font-size: 30rpx;
  position: relative;
  padding-top: 14rpx;
}

.nickName{
  font-size: 32rpx;
  padding-bottom: 4rpx;
  font-weight: bold;
}

.toMyInfo{
  font-size: 24rpx;
  margin-top: 19rpx;
}

.login{
  background: transparent;
  color: #fff;
  font-size: 32rpx;
  padding-left: 0;
}

.yellow-line{
  width: 57rpx;
  height: 7rpx;
  background: #D9AB42;
  position: absolute;
  left: 30rpx;
  bottom: 0;
}

.balance-box{
  margin-top: 49rpx;
  padding-right: 30rpx;
  height: 130rpx;
}

.balance-amount{
  width: 100%;
  text-align: right;
  font-size: 50rpx;
  font-family: DINAlternate-Bold;
  color: #fff;
}

.balance-amount .balance-unit{
  font-size: 32rpx;
}

.balance-text{
  margin-top: 23rpx;
  width: 100%;
  text-align: right;
  color: #fff;
  font-size: 28rpx;
}



.my-coupon{
  background: #fff;
  display: flex;
  margin: 30rpx 10rpx 10rpx 0;
  border-radius: 12rpx;
  padding-bottom: 40rpx;
}

.my-coupon>view{
  flex: 1;
  margin-top: 20rpx;
}

.my-coupon view{
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

view.amount{
  font-size: 50rpx;
  color: #333;
  font-family: DINAlternate-Bold;
  margin-top: 50rpx;
  margin-bottom: 27rpx;
}

.body{
  width: 100%;
  margin-bottom: 56rpx;
  background-color: #fff;
  padding-bottom: 60rpx;
}

.card{
  border-radius: 10rpx;
  font-size: 24rpx;
  height: 180rpx;
  display: flex;
  flex-direction: row;
}

.vip{
  height: 120rpx;
  line-height: 120rpx;
  padding-left: 40rpx;
}

.my-service-item{
  flex: 1;
  height: 140rpx;
  display: flex;
  justify-content: center;
}


.my-service-item>view{
  flex: 1;
  text-align: center;
}

.my-service-item image{
  width: 60rpx;
  height: 69rpx;
  margin-top: 60rpx;
}

.label{
  margin-top: 20rpx;
}


.login::after {
  border: 0; 
}

.my-info{
  position: relative;
}

.message-img{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: 50rpx;
  top: calc(50% - 20rpx);
}