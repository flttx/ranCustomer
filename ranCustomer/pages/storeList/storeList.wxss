/* pages/storeList/storeList.wxss */
.container{
  font-size: 32rpx;
}

.swiper-tab{
  width: 100%;
  height: 60rpx;
  display: flex;
  background-color: #fff;
  position: fixed;
  top: 0;
  z-index: 10;
}

.tab-item{
  flex: 1;
  text-align: center;
  position: relative;
}

.bar{
  width: 100rpx;
  height: 6rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
  background-color: #666;
}

.tab-box{
  padding-top:60rpx;
  /* padding-bottom:100rpx; */
  height:100%;
  box-sizing:border-box;
}

.box{
  width: calc(100% - 80rpx);
  padding: 40rpx 0 0 0;
}

.store-img{
  width: 100%;
  height: 400rpx;
  border-radius: 6rpx;
}

.store-name, .store-info{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}

.store-info{
  font-size: 28rpx;
  color: #999;
}

.store-name image{
  float: right;
  width: 40rpx;
  height: 40rpx;
  margin-top: 10rpx;
}

