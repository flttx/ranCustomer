/* packageComment/commentDetail/commentDetail.wxss */
.box{
  width: 100%;
  position: relative;
}

.banner-img{
  width: 100%;
  height: 480rpx;
}

.img-num{
  width: 80rpx;
  height: 40rpx;
  position: absolute;
  right: 40rpx;
  top: 40rpx;
  background-color: #333;
  border-radius: 10rpx;
  color: #fff; 
  font-size: 26rpx;
  line-height: 40rpx;
  text-align: center;
}

.comment-box{
  padding: 40rpx;
}

.comment-img{
  height: 100rpx;
  padding: 0 20rpx;
}

.comment-img image{
  float: left;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 1px solid;
}

.comment-userInfo{
  float: left;
  height: 80rpx;
  width: 200rpx;
  font-size: 28rpx;
  padding-left: 20rpx;
}

.comment-userInfo>view{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
}

.comment-date{
  font-size: 26rpx;
  color: #999;
}

.comment-text{
  font-size: 28rpx;
  margin-bottom: 40rpx;
  padding: 0 20rpx;
}

.store-box{
  height: 160rpx;
  padding: 20rpx;
  border: 1px solid #999;
  border-radius: 10rpx;
}

.store-img{
  width: 120rpx;
  height: 120rpx;
  float: left;
}

.store-info{
  float: left;
  width: calc(100% - 140rpx);
  height: 120rpx;
  margin-left: 10rpx;
}

.store-name{
  font-size: 30rpx;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  font-weight: bold;
  padding: 10rpx 0;
}

.store-address{
  height: 62rpx;
  font-size: 26rpx;
  text-overflow:ellipsis;
  overflow:hidden;
  display:-webkit-box;
  -webkit-line-clamp:2; /*这个数字是设置要显示省略号的行数*/
  -webkit-box-orient:vertical;
  padding: 10rpx 0;
}

.line{
  width: 100%;
  height: 20rpx;
  background-color: #F8F8F8;
}

.user-box{
  padding: 20rpx 50rpx;
  margin-bottom: 20rpx;
}

.user-box .title{
  font-weight: bold;
}

.user-box .comment-num{
  font-size: 30rpx;
  color: #999;
}

.user-comment{
  font-size: 28rpx;
  padding-left: 100rpx;
}

.reply-box{
  margin-left: 100rpx;
  margin-top: 10rpx;
  padding-left: 10rpx;
  border-left: 10px solid #f8f8f8;
  font-size: 28rpx;
}

.sender, .replyer{
  color: #999;
}

.send-box{
  width: calc(100% - 80rpx);
  height: 60rpx;
  padding: 20rpx 40rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1px solid #999;
}

.send-input{
  border: 0;
  width: 400rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  padding-left: 20rpx;
  border-radius: 10rpx;
  background-color: #f8f8f8;
  float: left;
}

.send-box image{
  float: right;
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
  margin-top: 6rpx;
}

.send-box text{
  float: right;
  height: 60rpx;
  line-height: 60rpx;
  color: #999;
  font-size: 28rpx;
  margin-right: 40rpx;
}

button{
  float: right;
  width: 60rpx;
  height: 60rpx;
  text-align: right;
  margin-right: 10rpx;
  padding-right: 0;
  padding-left: 0;
  font-size: 32rpx;
  line-height: 40rpx;
  border: none;
  background-color: white;
}

.button-hover{
  background-color: #fff;
  color: #fff;
}

button::after {
  border: 0; 
}